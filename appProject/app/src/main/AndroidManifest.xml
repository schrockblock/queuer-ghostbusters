<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghostbusters.queuer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QueuerApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_ghostbusters"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activites.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.CreateAccountActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activites.FeedActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activites.ProjectActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
